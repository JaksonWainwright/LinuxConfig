exec --no-startup-id mkdir /run/user/1000/snap.polybar-git/i3
exec --no-startup-id compton --config ~/.config/i3/compton.conf
exec --no-startup-id feh --bg-scale ~/Documents/Media/wallpapers/darkroad.jpeg --no-xinerama
exec_always --no-startup-id polybar -c /home/jwainwright/.config/polybar/config.ini bar
exec_always --no-startup-id polybar -c /home/jwainwright/.config/polybar/config.ini bar2
exec_always --no-startup-id polybar -c /home/jwainwright/.config/polybar/config.ini bar3
exec_always --no-startup-id polybar -c /home/jwainwright/.config/polybar/config.ini bar4
